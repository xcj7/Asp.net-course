@model shopbd.tbluser
@{
    ViewBag.Title = "Index";
}

<h2>Login Here</h2>
<table>
    @{
        Html.BeginForm("Index", "Admin", FormMethod.Post);
        <tr>
            <td>User Name:</td>
            <td>@Html.TextBoxFor(a => a.uname)</td>

        </tr>

        <tr>
            <td>Password :</td>
            <td>@Html.PasswordFor(a => a.upass)</td>

        </tr>

        <tr>
            <td>@ViewBag.msg</td>
            <td><input type="submit" value="Login"/></td>

        </tr>

    }
</table>

